<% if logged_in? %>
  <div class="row col-md-offset-3 myself">
    <aside class="col-md-9">
      <section class="user_info">
        <%= render "shared/user_info" %>
      </section>
      <section class="stats">
        <%= render 'shared/stats' %>
      </section>
      <section class="form_micropost">
        <%= render "shared/form_micropost" %>
      </section>
    </aside>

  </div>
  <div class="row  ">
    <div class="col-md-8 col-md-offset-3">
      <h3><%= t ".micropost_feed" %></h3>
      <%= render "shared/feed" %>
    </div>
  </div>
<% else %>
  <div class="row center jumbotron col-md-8  ">
    <h1><%= t ".welcome" %></h1>

    <h2>
      <%= t ".this_is_the_home" %>
      <%= link_to t(".ruby_on_rails"), "http://www.railstutorial.org/" %>
      <%= t ".sample_application" %>
    </h2>

  </div>
  <div class="row sign_up_now col-md-4">
    <%= render "users/new" %>
  </div>
  <div class="clearfix"></div>
<% end %>
