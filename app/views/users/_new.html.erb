<% provide :title, t(".sign_up") %>
<h1><%= t ".sign_up" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user || User.new do |f| %>
      <%= render "shared/error_messages", object: f.object  %>

      <%= f.text_field :name, class: "form-control", placeholder: "Your name" %>

      <%= f.email_field :email, class: "form-control", placeholder: "Your email" %>

      <%= f.password_field :password, class: "form-control", placeholder: "Your password" %>

      <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Comfirm password" %>

      <%= f.submit t(".create_my_account"), class: "btn btn-primary " %>
    <% end %>
  </div>
</div>
