<%= form_for([micropost, micropost.comments.build]) do |f| %>
<p>
  <%= f.text_area :content , placeholder: "Write comments... ", class: "text_comment" %>
  <%= f.hidden_field :user_id, value: current_user.id %>
</p>
<p>
  <%= f.submit "Create comment", class: "btn btn-primary btn_comment new_comment" %>
</p>
<% end %>
