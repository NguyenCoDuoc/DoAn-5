
<li id="<%= micropost.id %>" class = "micropost_all">
  <%= link_to gravatar_for(micropost.user, size: Settings.micropost.size_for_gravatar),
  micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span style="float:right;">
    <div class="dropdown">
      <p class="dropbtn"><b>...</b></p>
      <div class="dropdown-content">
        <% if current_user.is_user? micropost.user %>
          <%= link_to t(".delete"), micropost, method: :delete, class: "delete_micropost",
            data: {confirm: t(".you_sure")} %>
          <%= link_to "Edit", "#" %>
        <% end %>
      </div>
    </div>
  </span>
  <span class="content"><%= micropost.content %>
    <%= image_tag micropost.picture.url if micropost.picture? %>
  </span>
  <span class="timestamp">
    <%= t ".posted" %><%= time_ago_in_words micropost.created_at %><%= t ".ago" %>
    
  </span>
  <%= render "shared/form_comment", micropost: micropost %>

  <div class="all_comment">
    <%= render micropost.comments.select(:id, :content, :user_id, :micropost_id, :created_at).order(
      created_at: :DESC) %>
      
    </div>
</li>
<li style="background-color: #e8e8e8;margin-top:20px;margin-left: -16px;margin-right: -16px;">
  
</li>