<header class="navbar navbar-fixed-top navbar-inverse" style="background: #3b5998">
  <div class="container col-md-12" >
    <%= link_to "UTEHY", root_path, id: "logo" %>
    <% if logged_in? %>
          <%= form_tag(users_path, :method => "get", id: "search-form", class: "navbar-form pull-left") do %>
          <div class="input-group" style="min-width: 550px;margin-left: 30px; ">
          <%= text_field_tag :search, params[:search], placeholder: "Search ...", class: "form-control" %>
          <div class="input-group-btn">
          <%= submit_tag "", :name => nil, class: "btn btn-default" do %>
          <span class="glyphicon glyphicon-search"></span>
          <% end %>
          </div>
        </div>
    <% end %>
    <% end %>
    <nav class = "nav nav_center">
      <ul class="nav navbar-nav navbar-right nav-stacked" >
        <% if logged_in? %>
        <li>
           <%= link_to "#{@current_user.name}", current_user %>
        </li>
        <% end %>
        <li><%= link_to t(".home"), root_path %></li>
        <li><%= link_to t(".help"), help_path %></li>
        <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= t ".ngon_ngu" %><b class="caret"></b></a>
          <ul class="dropdown-menu">  
            <li><%= link_to_unless I18n.locale == :en, "English", locale: :en %></li>
            <li><%= link_to_unless I18n.locale == :vi, "Tiếng Việt", locale: :vi %></li>
          </ul>
        </li>
        <% if logged_in? %>
          <li><%= link_to t(".users"), users_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t ".account" %><b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t(".profile"), current_user %></li>
              <li><%= link_to t(".settings"), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t(".log_out"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t(".log_in"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>