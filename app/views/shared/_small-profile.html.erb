<aside class="col-md-2"  style="position: fixed; padding-right: 20px;">
<%= link_to gravatar_for(current_user, size: Settings.micropost.size_for_gravatar),
        current_user %>
    <h1><%= current_user.name %></h1>
   <p>
      <i class="fa fa-file-image-o" aria-hidden="true"></i>
      <%= link_to t(".update_avatar"), "https://vi.gravatar.com/emails/",:class => 'home_links' %>
  </p>
    <p>
      <i class="fa fa-pencil fa-fw w3-margin-right w3-text-theme"></i>
      <%= link_to t(".view_my_  profile"), current_user ,:class => 'home_links'%>
    </p>

    <p>

      <i class="fa fa-users" aria-hidden="true"></i>
      <%= link_to t(".all_user"), users_path,:class => 'home_links'%>
    </p>
     
    <span><%= pluralize current_user.microposts.count, t(".microposts") %></span>
    <% @user ||= current_user %>
    
    
</aside>
